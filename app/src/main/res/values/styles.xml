<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="NoShadowButton" parent="Widget.AppCompat.ActionButton">
        <!--        <item name="android:stateListAnimator">@null</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryCardViewStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="elevation">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="CategoryNameContainer">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="CategoryDifficultyImage">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="CategoryResultText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CategoryResultSoon">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:text">Скоро...</item>
    </style>

    <style name="QuestHelpButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/button_add</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:src">@drawable/help_icon</item>
    </style>

    <style name="StartFragmentBtnStart">
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/button_start</item>
        <item name="android:text">@string/start_btn_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
